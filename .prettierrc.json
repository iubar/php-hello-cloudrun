{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "phpVersion": "8.1",
        "printWidth": 190,
        "useTabs": true,
        "singleQuote": true,
        "trailingCommaPHP": false,
        "braceStyle": "1tbs",
        "requirePragma": false,
        "insertPragma": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json5",
        "printWidth": 140,
        "tabWidth": 2,
        "trailingComma": "none",
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    },
    {
      "files": "*.yml",
      "options": {
        "printWidth": 140,
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 140,
        "tabWidth": 2
      }
    }
  ]
}
